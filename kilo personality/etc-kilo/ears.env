# ALSA input device index or name (leave empty for default)
EARS_INPUT_DEVICE=pulse

# Hotword phrases (comma-separated). Vosk keyword grammar uses these.
EARS_WAKE_PHRASES=hey jarvis, hey kilo, computer

# Vosk model path
EARS_VOSK_MODEL=/opt/kilo/models/vosk-small-en-us

# Recording limits/timeouts (seconds)
EARS_MAX_SPEECH_SEC=8
EARS_SILENCE_HANG_SEC=0.9

# Min confidence to accept dictation (0.0â€“1.0)
EARS_MIN_CONF=0.30

# Chat endpoint
EARS_CHAT_URL=http://127.0.0.1:7863/ask
