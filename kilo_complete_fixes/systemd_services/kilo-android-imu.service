[Unit]
Description=Kilo Android IMU Module
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/kilo
Environment=PATH=/opt/kilo/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/opt/kilo/venv/bin/python /opt/kilo/bin/fixed_android_imu_v2.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target