[Unit]
Description=Kilo Android Face Detection Bridge (USB Tethering)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/kilo/bridges
Environment=PATH=/opt/kilo/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/opt/kilo/venv/bin/python /opt/kilo/bridges/android_face_bridge_usb.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target